<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="fr.utbm.coursewebapp.entity.Course" table="COURSE" optimistic-lock="version">
        <id name="code" type="string">
            <column name="CODE" length="4" />
            <generator class="assigned" />
        </id>
        <property name="title" type="string">
            <column name="TITLE" length="100" not-null="true" />
        </property>
        <set name="courseSessions" table="COURSE_SESSION" inverse="true" lazy="false" fetch="select">
            <key>
                <column name="COURSE_CODE" length="5" not-null="true" />
            </key>
            <one-to-many class="fr.utbm.coursewebapp.entity.CourseSession" />
        </set>
    </class>
</hibernate-mapping>
