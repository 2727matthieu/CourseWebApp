<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="fr.utbm.coursewebapp.entity.CourseSession" table="COURSE_SESSION" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <many-to-one name="location" class="fr.utbm.lo54.entity.Location"  cascade="all">
            <column name="LOCATION_ID" not-null="true" />
        </many-to-one>
        <property name="startDate" type="date">
            <column name="START_DATE" length="7" not-null="true" />
        </property>
        <property name="endDate" type="date">
            <column name="END_DATE" length="7" not-null="true" />
        </property>
        <set name="clients" table="CLIENT" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="COURSE_SESSION_ID" precision="4" scale="0" not-null="true" />
            </key>
            <one-to-many class="fr.utbm.coursewebapp.entity.Client" />
        </set>
    </class>
</hibernate-mapping>
