<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="fr.utbm.coursewebapp.entity.Location" table="LOCATION" optimistic-lock="version">
        <id name="id" type="java.lang.Integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        <property name="city" type="string">
            <column name="CITY" length="50" not-null="true" />
        </property>
        <set name="courseSessions" table="COURSE_SESSION" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="LOCATION_ID" not-null="true" />
            </key>
            <one-to-many class="fr.utbm.coursewebapp.entity.CourseSession" />
        </set>
    </class>
</hibernate-mapping>
